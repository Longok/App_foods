<% provide :title, "Danh mục sản phẩm"%>
<%= render partial: "admin/header" %>

<div class="new-items">

    <div class="dashboard">
        <%=render partial: "admin/sidebar" %>
    
        <div class="aside">
        
            <div class="col-md-8 mx-auto" style="margin-top: 5rem; font-size: 2rem">

            <table class="table table-borderless table-lg text-center">
                    
                    <thead class="table-dark">
                        <tr>
                            <th scope="col-4" class="">#</th>
                            <th scope="col-4" class="">Danh mục sản phẩm</th>
                            <th scope="col-4" class="">Sửa/Xóa</th>
                        </tr>
                    </thead>
                    <tbody>      
                        <% @categories.each do |cate| %>
                            <tr>
                                <td><%= cate.id %></td>
                                <td><%= link_to cate.name, category_path(cate.id), class:"text-decoration-none" %></td>
                                <td>
                                    <%= link_to "Sửa", edit_category_path(cate.id), class:"btn-lg btn-warning" %> |
                                    <%= link_to "Xóa", category_path(cate.id), data: { turbo_method: :delete}, class:"btn-lg btn-danger" %>
                                </td>
                            </tr>
                        <% end%>
                    </tbody>

                </table>

            </div>
        </div>
    </div>
</div>