<% provide :title, "Cập nhật danh mục" %>
<%= render partial: "admin/header" %>

<div class="new-items">

    <div class="dashboard">
    
        <%=render partial: "admin/sidebar" %>

        <div class="aside">
            <div class="row">
                <div class="col-md-6 offset-md-3" style="margin-top: 10rem;">
                    <h2 class="text-center mt-3">Cập nhật danh mục</h2>
                    <%= form_for @categories do |f| %>

                        <%= render "shared/error_messages", object: @categories%>

                        <%= f.text_field :name, placeholder:"Tên danh mục", class:"form-control mt-3" %>

                        <%= f.submit "Cập nhật",  class:"btn btn-primary mt-3"%>
                    <% end %>
                </div>
            </div>

        </div>

    </div>

</div>