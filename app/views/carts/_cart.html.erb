<% provide :title, "Giỏ hàng của bạn"%>
<%= turbo_frame_tag "cart" do %>
    <h1 class="mb-5">Giỏ hàng của bạn:</h1>
    <% if @cart.total > 0 %>
        <p>Tổng cộng: <%= number_to_currency(@cart.total, precision: 0) %></p>
    <% end %>    
    <% if @cart.cart_items.count > 0 %>
        <%= render "cart_items/cart_item" %>
    <% else %>
        <p>Giỏ hàng trống, <%= link_to "Mua Ngay", products_path, class:"text-decoration-none" %></p>
    <% end %>
<% end %>