<section id="slide">
    
    <% @slides.each do |slide| %>
        <div class="slide-items">
            <%= image_tag(slide.image, class: 'itemImg active') if slide.image.attached? %>
        </div>
    <% end %>
    <div class="buttons">
        <button id="prev"><i class="fa-regular fa-circle-left"></i></button>
        
        <button id="next"><i class="fa-regular fa-circle-right"></i></button>

    </div>

</section>