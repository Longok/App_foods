    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "carts","checkouts", "slide", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

<body>
  <%= render partial: "layouts/header" %>
  <%= render partial: "layouts/slide" %>
