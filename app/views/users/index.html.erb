<% provide :title, "Trang Users" %>
<%= render partial: "admin/header" %>

<div class="new-items">

    <div class="dashboard">
    
        <%=render partial: "admin/sidebar" %>

        <div class="aside">

            <div class="products-table col-md-8 mx-auto" style="margin-top: 3rem; font-size: 2rem">

                <table class="table table-borderless table-lg text-center">
                        
                        <thead class="table-dark">
                            <tr>
                                <th scope="col-4" class="">ID</th>
                                <th scope="col-4" class="">TÊN USERS</th>
                                <th scope="col-4" class="">CẬP NHẬT</th>
                            </tr>
                        </thead>
                        <tbody>      
                            <% @users.each do |user| %>
                                <tr>
                                    <td><%= user.id %></td>
                                    <td><%= user.name %></td>
                                    <td>
                                        <%= link_to "Sửa", edit_user_path(user), class:"btn-lg btn-warning" %> |
                                        <%= link_to "Xóa", user_path(user), data: { turbo_method: :delete}, class:"btn-lg btn-danger" %>
                                    </td>
                                </tr>
                            <% end%>
                        </tbody>

                </table>

            </div> 
        </div>
    </div>
</div> 